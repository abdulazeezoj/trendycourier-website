{
  "kind": "collectionType",
  "collectionName": "shipments",
  "info": {
    "singularName": "shipment",
    "pluralName": "shipments",
    "displayName": "Shipment",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "attributes": {
    "receiver_name": {
      "type": "string",
      "required": true
    },
    "receiver_phone": {
      "type": "string",
      "required": true
    },
    "receiver_email": {
      "type": "email"
    },
    "receiver_city": {
      "type": "string",
      "required": true
    },
    "receiver_country": {
      "type": "string",
      "required": true
    },
    "receiver_address": {
      "type": "text"
    },
    "pickup_center": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::shipment-location.shipment-location",
      "inversedBy": "shipment_pickup_centers"
    },
    "is_pickup": {
      "type": "boolean",
      "default": true,
      "required": true
    },
    "shipping_origin": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::shipping-origin.shipping-origin",
      "inversedBy": "shipments"
    },
    "shipping_destination": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::shipping-destination.shipping-destination",
      "inversedBy": "shipments"
    },
    "shipping_method": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::shipping-method.shipping-method",
      "inversedBy": "shipments"
    },
    "shipping_size": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::shipping-size.shipping-size",
      "inversedBy": "shipments"
    },
    "shipping_size_value": {
      "type": "decimal"
    },
    "current_status": {
      "type": "enumeration",
      "enum": [
        "Pending",
        "Processing",
        "Ready for Pickup",
        "Out for Delivery",
        "In Transit",
        "Delivered",
        "Cancelled",
        "Delayed"
      ],
      "default": "Pending",
      "required": true
    },
    "current_location": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::shipment-location.shipment-location",
      "inversedBy": "shipments"
    },
    "shipment_note": {
      "type": "text"
    },
    "shipment_events": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::shipment-event.shipment-event",
      "mappedBy": "shipment"
    },
    "deliveredAt": {
      "type": "datetime"
    },
    "tracking_code": {
      "type": "string"
    }
  }
}
